@page "/"
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>


<div id="loginPage" class="login-container">
    <div class="login-form">
        <h1>AUVP</h1>
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            @* <form id="loginForm"> *@
            <div class="form-group">
                <label for="username">Username</label>
                @* <input type="text" id="username" name="username" required> *@
                <InputText aria-required="true" @bind-Value="loginModel.Username" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                @* <input type="password" id="password" name="password" required> *@
                <InputText type="password" aria-required="true" @bind-Value="loginModel.Password" />
            </div>
            <button type="submit" class="login-btn">Login</button>
            @* <div id="errorMessage" class="error-message hidden"></div> *@
            @if (showError)
            {
                <div id="errorMessage" class="error-message">Usuário ou senha inválidos</div>
                @* <p class="mt-4 text-red-500 text-center font-semibold">Usuário ou senha inválidos</p> *@
            }
            @* </form> *@
        </EditForm>
    </div>
</div>


@code {
    private LoginModel loginModel = new();
    private bool showError = false;

    private void HandleLogin()
    {
        if (loginModel.Username == "admin" && loginModel.Password == "123")
        {
            Navigation.NavigateTo("/Dashboard");
        }
        else
        {
            showError = true;
        }
    }

    public class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
